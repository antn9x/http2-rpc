{
  "compilerOptions": {
    "lib": ["es2017"],
    "target": "es5",
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "outDir": "dist",
    "types": ["bun-types"]
  },
  "exclude": ["dist", "tests"]
}
